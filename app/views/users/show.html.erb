<div class="container container-padded">
  <div class="row">
    
    <!-- *** LEFT Column *** -->
    <div class="col-md-4">
  
      <!-- Card -->
      <div class="card">   
        <!-- Card Header -->
        <div class="card-header">
          <h6><%= @user.username %></h6>
        </div>
        <!-- Card Block -->
        <div class="card-block">
          <p class="card-text">user: <%= @user.username %></p>
          <p class="card-text">email: <%= @user.email %></p>
        </div>
        <!-- Card Footer -->
        <div class="card-footer text-muted">              
          <ul class="nav navbar-nav">
	          <li class="nav-item"><%= link_to 'Back', tweets_path %></li>
          </ul>
        </div>
      </div>

    </div>

    <!-- *** RIGHT Column *** -->
    <div class="col-md-8">
   
      <!-- DO for each TWEET  -->
      <% @tweets.each do |tweet| %>

        <!-- Card -->
        <div class="card">          

          <!-- Card Header -->
          <div class="card-header">
            <ul class="nav navbar-nav">
              <li class="nav-item"><%= tweet.user.username %> | <small class="text-muted"><%= time_ago_in_words(tweet.created_at) %></small></li>
            </ul>
          </div>

          <!-- Card Block ** SPECIAL LINK SETUP ** -->          
          <ul class="list-group">
              <!-- DO for each TWEET  -->
              <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <div class="card-block">
                <p class="card-text"><%= tweet.content %></p>
              </div>
            <% end %>
            <!-- END DO for Card Block Link to Tweet -->
          </ul>

          <!-- Card Footer -->
          <div class="card-footer text-muted">
            <ul class="nav navbar-nav">
                  <% if tweet.user == current_user %>
                    <li class="nav-item"><%= link_to 'Edit', edit_tweet_path(tweet) %></li>
                    <li class="nav-item"><%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                  <% end %>
            </ul>
          </div>

        </div>
      <!-- END DO for TWEET -->
      <% end %>  
    </div> 
  </div>
  <br>
</div>
