<div class="container container-padded">

  <div class="row">

    <div class="col-md-4">
  
      <% if user_signed_in? %>
       
        <div class="card-header">
          <h6>Your Account:</h6>
        </div>

        <div class="card card-block">
          <p class="card-text"><%= current_user.email %></p>
          <%= link_to 'New Tweet', new_tweet_path %>
        </div>

      <% else %>

        <%= link_to "Sign In", signin_path , class: "btn btn-primary btn-sm" %>

      <% end %>

    </div>

    <div class="col-md-8">
   
      <% @tweets.each do |tweet| %>

        <div class="card">          
          <div class="card-header">
            <ul class="nav navbar-nav">
                      
                  <li class="nav-item"><%= link_to 'Show', tweet %></li>

                  <% if tweet.user == current_user %>

                    <li class="nav-item"><%= link_to 'Edit', edit_tweet_path(tweet) %></li>
                    <li class="nav-item"><%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  
                  <% end %>

            </ul>
          </div>
          
          <div class="card-block">

            <h4 class="card-title"><%= tweet.user.email %></h4>
            <p class="card-text"><%= tweet.content %></p>
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
          <div class="card-footer text-muted">
            <small><%= tweet.created_at %></small>
          </div>
        </div>

      <% end %>
   
    </div> 

  </div>

  <br>

</div>
