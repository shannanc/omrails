<div class="container container-padded">
	<div class="row"> 
		<div class="offset-md-2 col-md-8">
			<div class="card">
				<div class="card-header">
				 	<ul class="nav navbar-nav">
				 		<li class="nav-item"><%= @tweet.user.email %></li>
						<!-- If you own the tweet then you can delete or edit -->
						<% if @tweet.user == current_user %>
							<!-- <%= link_to 'Edit', edit_tweet_path(@tweet) %> | -->
							<li class="nav-item"><%= link_to 'Edit', edit_tweet_path(@tweet) %></li>
							<li class="nav-item"><%= link_to 'Delete', @tweet, method: :delete, data: { confirm: 'Are you sure?' } %></li>
						<% end %>
					</ul>
				</div>

				<div class="card-block">
					<p class="card-text"><%= @tweet.content %></p>
				</div>

				<div class="card-footer text-muted">
					<%= link_to 'Back', tweets_path %>
				</div>
			</div>
		</div>
	</div>
</div>

	