<!DOCTYPE html>
<html>

   <!-- Header -->
   <%= render 'layouts/header' %>

  <body>

    <!-- Navigation Bar -->
    <%= render 'layouts/navbar' %>
    
    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <%= render 'layouts/footer' %>
   
  </body>
  
</html>